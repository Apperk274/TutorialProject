@using DTOLayer.ReqDTO;
@model LogInReqDTO
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="content">
    <form class="login-form" action="@Url.Action()" method="post">
        <h3 class="form-title font-green">Oturum Aç</h3>
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span> Enter any username and password. </span>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">E-Posta</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="E-Posta" name="email" />
            @Html.ValidationMessageFor(x=> x.Email, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Şifre</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre" name="password" />
            @Html.ValidationMessageFor(x=> x.Password, "", new {@class = "text-danger"})
        </div>
        <div class="form-actions">
            <button type="submit" class="btn green uppercase">Oturum Aç</button>
            <a href="javascript:;" id="forget-password" class="forget-password">Şifremi unuttum</a>
        </div>
        <div class="create-account">
            <p>
                <a href="@Url.Action("Register")" id="register-btn" class="uppercase">Hesap Oluştur</a>
            </p>
        </div>
    </form>
</div>