@using DTOLayer.ResDTO;
@using EntityLayer.Concrete;
@model List<Thread>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table id="personTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Created at</th>
            <th>Title</th>
            <th>Content</th>
            <th>Category</th>
            <th>Name</th>
            <th>Surname</th>
            <!-- Add more columns as per your model properties -->
        </tr>
    </thead>
    <tbody>
        @foreach (var thread in Model)
        {
            <tr>
                <td> <a href="@Url.Action("Details", "Thread", new { id = thread.Id })">@thread.Id</a></td>
                <td>@thread.CreatedAt</td>
                <td>@thread.Title</td>
                <td>@thread.Content</td>
                <td>@thread.Category.Name</td>
                <td>@thread.AppUser.Name</td>
                <td>@thread.AppUser.Surname</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = thread.Id })" class="btn btn-primary">Edit</a>
                    <a href="#" onclick="showDeleteConfirmation(@thread.Id)" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="@thread.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Modal for Delete Confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Thread</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this thread?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>
<script>
    function showDeleteConfirmation(threadId) {
        // Store the thread ID to be deleted in a variable accessible by the modal event listener
        const threadIdToDelete = threadId;

        // Get a reference to the "Delete" button inside the modal
        const confirmDeleteButton = document.getElementById("confirmDelete");

        // Attach a click event listener to the "Delete" button inside the modal
        confirmDeleteButton.addEventListener("click", function () {
            // Send the delete request via Fetch API
            fetch("@Url.Action("Delete")" + "/" + threadIdToDelete, {
                method: "DELETE"
            })
                .then(function (response) {
                    if (response.ok) {
                        // Handle the success response as needed
                        // For example, reload the page to update the table
                        location.reload();
                    } else {
                        // Handle the error response as needed
                        console.log("Error while deleting thread.");
                    }
                })
                .catch(function (error) {
                    // Handle the error as needed
                    console.log(error);
                });
        });

        // Show the Bootstrap modal programmatically
        const deleteModal = document.getElementById("deleteModal");
        const bootstrapModal = new bootstrap.Modal(deleteModal);
        bootstrapModal.show();
    }
</script>
